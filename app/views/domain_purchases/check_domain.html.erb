<div class="row cover" id="searchForm">
	<div class="col-lg-12">
		<h1 class="cover-heading">Search Domain</h1>
		<!-- <p class="lead"></p> -->
		<%= form_tag("/domain_purchases/do_check_domain?point_to="+@point_to.to_s, method: "post", :class=>"form-inline", :id=>'frm_check_domain') do %>
		<div class="form-group">
			<div class="input-group input-group-lg fg-error">
				<div class="input-group-addon">http://</div>
				<input class="form-control required" name="domain[name]" type="text" id="searchTextfield" placeholder="your desire domain">

				<div class="input-group-btn">
						<select class="form-control" name="domain[type]" style="height:46px;">
							<option value="COM">.COM</option>
							<option value="NET">.NET</option>
							<option value="ORG">.ORG</option>
							<option value="INFO">.INFO</option>
							<option value="BIZ">.BIZ</option>
							<option value="WS">.WS</option>
							<option value="US">.US</option>
							<option value="TV">.TV</option>
							<option value="COM.MX">.COM.MX</option>
							<option value="ME">.ME</option>
							<option value="MOBI">.MOBI</option>
							<option value="IN">.IN</option>
							<option value="CO.IN">.CO.IN</option>
							<option value="FIRM.IN">.FIRM.IN</option>
							<option value="GEN.IN">.GEN.IN</option>
							<option value="IDN.IN">.IDN.IN</option>
							<option value="NET.IN">.NET.IN</option>
							<option value="ORG.IN">.ORG.IN</option>
							<option value="COM.BZ">.COM.BZ</option>
							<option value="NET.BZ">.NET.BZ</option>
							<option value="MX">.MX</option>
							<option value="NL">.NL</option>
							<option value="ES">.ES</option>
							<option value="COM.ES">.COM.ES</option>
							<option value="ORG.ES">.ORG.ES</option>
							<option value="NOM.ES">.NOM.ES</option>
							<option value="COM.BR">.COM.BR</option>
							<option value="NET.BR">.NET.BR</option>
							<option value="COM.CO">.COM.CO</option>
							<option value="NET.CO">.NET.CO</option>
							<option value="NOM.CO">.NOM.CO</option>
						</select>
					</div>
				</div>
			</div>
			<input type="hidden" name="point_to" value="<%= @point_to.to_s%>">
			<button type="submit" class="btn btn-lg btn-info" <%= "disabled" if flash[:error].present? && flash[:error]== "Parameter: point_to is required." %>>GO</button>
			<%end%>

			<% if flash[:error].present? %>
			<div class="alert alert-danger" role="alert">
				<strong>Sorry!</strong> <%= flash[:error] %>
			</div>
			<%else%>
			<% if flash[:success] == "success" %>
			<div class="alert alert-success" role="alert">
				<strong>Congratulation! </strong> <a href="/domain_purchases/register_domain">http://<%= params[:sdomain]%></a> is available <span class="pull-right"><a class="btn btn-primary" href="/domain_purchases/register_domain"><i class="glyphicon glyphicon-chevron-right"></i> Register this domain</a></span>
			</div>
			<%else%>
			<% if flash[:success] == "" %>
			<div class="alert alert-danger" role="alert">
				<strong>Sorry my dear!</strong> <a href="">http://<%= params[:sdomain]%></a> is no longer available, <a href="">search again</a>
			</div>
			<%end%>
			<%end%>
			<% end %>

      </div>
  </div>

  <div id="features" class="row">
  	<div class="col-lg-4">
  		<img src="../assets/search_1.png" alt="Generic placeholder image">
  		<h3>Find your desired domain</h3>
  		<p>Search your desired domain in the domain search box, like www.ilovemydomain.com</p>
  	</div>
  	<div class="col-lg-4">
  		<img src="../assets/search_2.png" alt="Generic placeholder image">
  		<h3>Automatic maps to your Portfolio/Classroom</h3>
  		<p>After your successful purchase, gotoClassroom maps your domain automatically to your Portfolio and Classroom.Within 1-10 minutes you will be able to introduce your portfolio or your classroom under your own domain name.</p>
  	</div>
  	<div class="col-lg-4">
  		<img src="../assets/search_3.png" alt="Generic placeholder image">
  		<h3>Start branding</h3>
  		<p>Within 1-10 minutes you will be able to introduce your Portfolio/Resume or your classroom under your own domain name.</p>
  	</div>
  </div>

<style>
label.error{
	color: red;
}
.fg-error{
	position: relative;
}
.fg-error label.error{
	position: absolute;
	bottom: -28px;
	left: 0;
}
.fg-error.col-md-3{
	padding: 0;
	float: none;
}
.col-lg-4:nth-child(1), .col-lg-4:nth-child(3){
	width: 30%;
}
.col-lg-4:nth-child(2){
	width: 40%;
}
</style>
  <script>
  $(function(){

  	$('#frm_check_domain').validate_popover({ popoverPosition: 'top' });
  	$('#frm_check_domain').validate();

  });
  </script>