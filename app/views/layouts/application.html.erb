<!DOCTYPE html>
<html>
<head>
	<title>gotoClassroom - Domain Seller</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<% if params[:action] == 'check_domain' %>
	<% classes = 'container-fluid' %>
	<% else %>
	<% classes = 'container' %>
	<% end %>
	<div class="<%= classes%>">
		<div class="container">
			<div class="row" id="header">
				<div class="col-lg-12">
					<div class="masthead clearfix">
						<div class="inner">
							<h3 class="masthead-brand"><a href="/"><img src="../assets/logo.png" alt=""></a></h3>
						</div>
					</div>
				</div>
			</div>
		</div>

		<%= yield %>

		<div class="container mastfoot">
			<div class="inner">
				<p>Copyright by <a href="http://gotoclassroom.com">gotoClassroom</a>.</p>
			</div>
		</div>
	</div>
</body>
</html>
